
<%- include("partials/boilerplate.ejs")%>
<%- include("partials/home.ejs")%>
<%-include("includes/flash.ejs")%>

<link rel="stylesheet" href="/styles/login.css">
    <body class="d-flex align-items-center bg-body-tertiary">
        
        

        <div class = "container login">
            <form action="/doctor" method="POST" novalidate class="needs-validation">
                <h1 class="h3 mb-3 fw-normal">Please Log in</h1>
            
                <div class="form-floating">
                    <input type="text" class="form-control" id="username" name="username" placeholder="name@example.com" required/>
                    <label for="username" class="form-label">Username</label>
                
                </div>
                <div class="form-floating">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password" required/>
                <label for="password" class="form-label">Password</label>
                </div>
            
                <div class="form-check text-start my-3">
                <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                    Remember me
                </label>
                </div>
                <button class="btn btn-primary  py-2" >Login</button>
          </form>
        </div>
        

    </body>
